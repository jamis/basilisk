#! /bin/bash

if [ ! $1 ] ; then
  echo "Specify a file name.";
  exit;
fi

fname="$1.tar";

src="src/*.c include/*.h bskrun.c bskcompile.c bsktreasure.c bskcallbacks.c bskcallbacks.h Makefile* README LICENSE CHANGELOG treasure.ini config.h";
doc="docs/*";
dat="dat/standard/*.bsk dat/snfist/*.bsk dat/scitadel/*.bsk dat/dragon/*.bsk dat/nbomt/*.bsk dat/defenders/*.bsk dat/tnblood/*.bsk dat/boem/*.bsk dat/diablo/*.bsk dat/dungeon/*.bsk dat/motp/*.bsk dat/polyhedron/*.bsk dat/frcs/*.bsk dat/mof/*.bsk";

case $2 in
  "")
    echo Please specify 'src', 'all', 'doc', or 'data'.;
    exit ;;
  "src")
    data="$src" ;;
  "all")
    data="$src $doc $dat" ;;
  "doc")
    data="$doc" ;;
  "data")
    data="$dat" ;;
esac

tar cvf $fname $data;
gzip --best -fq $fname;
